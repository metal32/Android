<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    tools:context="com.ayush.tickle.SelectInterest">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar1"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_background" />
                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view1"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Fashion"
                    android:textColor="#7f000000"
                    android:textSize="14sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mask" />
                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view2"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Technology"
                    android:textColor="#7f000000"
                    android:textSize="14sp"
                    />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/mask2" />
                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view3"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Food"
                    android:textColor="#7f000000"
                    android:textSize="14sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/mask3" />
                <ImageView
                    android:id="@+id/image10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view4"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Music"
                    android:textColor="#7f000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/mask4" />
                <ImageView
                    android:id="@+id/image11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view5"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Travel"
                    android:textColor="#7f000000"
                    android:textSize="14sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/mask5" />
                <ImageView
                    android:id="@+id/image12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_button_2"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/text_view6"
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="5dp"
                    android:background="#FFF"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="Dance"
                    android:textColor="#7f000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:text="@string/done"
        android:layout_alignParentBottom="true"
        android:background="#4a90e2"
        android:elevation="4dp">

    </Button>

</RelativeLayout>
